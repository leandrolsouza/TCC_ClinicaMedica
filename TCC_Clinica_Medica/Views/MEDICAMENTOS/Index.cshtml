@model PagedList.IPagedList<MEDICAMENTOS>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Medicamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    $(document).ready(function () {

        $("#dialog-confirm").hide();
    });


    function Apagar(id) {
        $("#dialog-confirm").show();
        $("#dialog-confirm").dialog({
            resizable: false,
            height: 160,
            width: 300,
            modal: true,
            buttons: {
                "Apagar": function () {

                    $.ajax({
                        type: "POST",
                        dataType: 'json',
                        crossDomain: true,
                        url: '@(Url.Action("DeleteConfirmed", "MEDICAMENTOS", null, Request.Url.Scheme))?id=' + id,
                        success: function (result) {
                            window.location.href = result;
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            $.simplyToast(xhr.status, 'danger');
                            $.simplyToast(thrownError, 'danger');
                            //alert(xhr.responseText);
                        },
                        cache: false
                    });

                  $(this).dialog("close");
                },
                "Cancelar": function () {
                    $(this).dialog("close");
                }
            }
        });
    }



</script>

<link href="~/Content/PagedList.css" rel="stylesheet" />

<br />
<br />
<div class="jumbotron">
    <h2>Medicamentos</h2>


    <table class="table">
