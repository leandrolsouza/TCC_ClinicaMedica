@model TCC_Clinica_Medica.MEDICAMENTOS

@{
    ViewBag.Title = "Medicamento - Novo";
}

<script>

    $(document).ready(function () {

        $('#Criar').click(function (e) {
            var CamposFaltando = false;

            $('input[type="text"]').each(function () {
                if ($.trim($(this).val()) == '') {
                    CamposFaltando = true;
                    $(this).css({
                        "border": "1px solid red",
                        "background": "#FFCECE"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                        "background": ""
                    });
                }
            });

            if (CamposFaltando) {
                $.simplyToast('Favor preencher os campos obrigatorios!', 'danger');
                e.preventDefault();
            }
            else {
                return true;
            }

        });
    });
</script>
<br />
<br />
<div class="jumbotron">
    <h2>Medicamentos</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Novo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span class="control-label col-md-2"> Nome Generico</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOME_GENERICO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOME_GENERICO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2">Fabrica</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FABRICA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FABRICA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2">Fabricante</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FABRICANTE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FABRICANTE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" id="Criar">
                        <i class="glyphicon glyphicon-floppy-disk"></i> &nbsp; Criar
                    </button>

                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("<<< Voltar", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>