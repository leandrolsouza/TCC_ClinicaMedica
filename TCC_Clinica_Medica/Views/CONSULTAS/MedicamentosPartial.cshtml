@model List<MEDICAMENTOS>
    <div class="panel panel-primary">
        <table class="table  table-bordered">
            <tr style="background-color:#d1d1d1;font-weight: bold;">
                <td style="min-width: 30px; max-width: 30px">
                </td>
                <td>NOME GENERICO</td>
                <td>FABRICA</td>
                <td>FABRICANTE</td>
            </tr>
            @if (Model.Count > 0)
            { 
            foreach (var item in Model)
            {
            <tr>
                <td>
                   @Html.CheckBox("IDMEDICAMENTO",false, new { @class = "", @value = @item.ID })
                </td>
                <td>
                    @item.NOME_GENERICO
                </td>
                <td>
                    @item.FABRICA
                </td>
                <td>
                    @item.FABRICANTE
                </td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <div class="alert alert-success" role="alert"><span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;NÃO EXISTEM DOENÇAS CADASTRADAS</div>
                    </td>
               </tr>
                    }
</table>
        </div>
  
            
